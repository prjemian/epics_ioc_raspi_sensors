# dht22.db

record(bo, "$(P)$(C):available")
{
    field (DESC, "DHT22 available")
    field (ZNAM, "not available")
    field (ONAM, "available")
    field (VAL, "0")
}

record(longout, "$(P)$(C):status")
{
    field (DESC, "DHT22 status")
    field (VAL, "-1")
}

record(ao, "$(P)$(C):humidity")
{
    field (DESC, "DHT22 humidity")
    field (EGU, "%")
    field (PREC, "1")
    field (DRVH, 100)
    field (DRVL, 0)
}

record(ao, "$(P)$(C):temperature")
{
    field (DESC, "DHT22 temperature")
    field (EGU, "C")
    field (PREC, "1")
    field (DRVH, 80)
    field (DRVL, -20)
}

# all averaging will be done by the dht22_seq.st sequence program

record(ao, "$(P)$(C):humidity:1m")
{
    field (DESC, "DHT22 humidity, 1 min average")
    field (EGU, "%")
    field (PREC, "2")
}
record(ao, "$(P)$(C):humidity:1m:sdev")
{
    field (DESC, "DHT22 humidity, 1 min std. dev.")
    field (EGU, "%")
    field (PREC, "2")
}

record(ao, "$(P)$(C):temperature:1m")
